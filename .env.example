# ==============================================
# ARCHIVO DE EJEMPLO DE VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo a .env y ajusta los valores según tus necesidades

# ----------------------------------------------
# PostgreSQL - Base de Datos para Airflow
# ----------------------------------------------
POSTGRES_AIRFLOW_USER=airflow
POSTGRES_AIRFLOW_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_AIRFLOW_DB=airflow

# ----------------------------------------------
# PostgreSQL - Base de Datos para Superset
# ----------------------------------------------
POSTGRES_SUPERSET_USER=superset
POSTGRES_SUPERSET_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_SUPERSET_DB=superset

# ----------------------------------------------
# PostgreSQL - Base de Datos para OpenMetadata
# ----------------------------------------------
POSTGRES_OPENMETADATA_USER=openmetadata
POSTGRES_OPENMETADATA_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_OPENMETADATA_DB=openmetadata_db

# ----------------------------------------------
# Apache Airflow
# ----------------------------------------------
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:CHANGE_THIS_PASSWORD@postgres_airflow_db:5432/airflow
AIRFLOW__CORE__FERNET_KEY=GENERATE_A_NEW_FERNET_KEY
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth,airflow.api.auth.backend.session
AIRFLOW__WEBSERVER__SECRET_KEY=CHANGE_THIS_SECRET_KEY
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=CHANGE_THIS_PASSWORD

# ----------------------------------------------
# Apache Spark
# ----------------------------------------------
SPARK_MASTER_HOST=spark-master
SPARK_MASTER_PORT=7077
SPARK_MASTER_WEBUI_PORT=8081
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g

# ----------------------------------------------
# Apache Superset
# ----------------------------------------------
SUPERSET_SECRET_KEY=CHANGE_THIS_SUPERSET_SECRET_KEY
SUPERSET_DATABASE_URI=postgresql+psycopg2://superset:CHANGE_THIS_PASSWORD@postgres_superset_db:5432/superset
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
SUPERSET_ADMIN_EMAIL=admin@example.com

# ----------------------------------------------
# Apache Druid
# ----------------------------------------------
DRUID_HOST=druid
DRUID_PORT=8888

# ----------------------------------------------
# OpenMetadata
# ----------------------------------------------
OPENMETADATA_DB_HOST=postgres_openmetadata_db
OPENMETADATA_DB_PORT=5432
OPENMETADATA_DB_USER=openmetadata
OPENMETADATA_DB_PASSWORD=CHANGE_THIS_PASSWORD
OPENMETADATA_DB_NAME=openmetadata_db
OPENMETADATA_CLUSTER_NAME=openmetadata
OPENMETADATA_SERVER_HOST=openmetadata-server
OPENMETADATA_SERVER_PORT=8585
OPENMETADATA_ADMIN_USERNAME=admin
OPENMETADATA_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# ----------------------------------------------
# Elasticsearch (para OpenMetadata)
# ----------------------------------------------
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ----------------------------------------------
# Configuraciones Generales
# ----------------------------------------------
PIPELINE_NAME=ukraine_sentiment_analysis
DATA_PATH=/opt/spark/data
OUTPUT_PATH=/opt/spark/output

# ----------------------------------------------
# NOTAS DE SEGURIDAD
# ----------------------------------------------
# 1. NUNCA subas el archivo .env a Git
# 2. Genera un nuevo Fernet Key con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# 3. Usa contraseñas fuertes en producción
# 4. Considera usar Docker Secrets o AWS Secrets Manager en producción
